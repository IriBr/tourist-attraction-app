generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  email
  google
  apple
}

enum AttractionCategory {
  museum
  park
  landmark
  beach
  restaurant
  entertainment
  shopping
  nature
  historical
  religious
  other
}

enum SubscriptionTier {
  free
  premium
}

enum SubscriptionStatus {
  active
  cancelled
  expired
}

enum UserRole {
  user
  admin
}

// ============ GAMIFICATION ============

enum BadgeTier {
  bronze    // 25% progress
  silver    // 50% progress
  gold      // 75% progress
  platinum  // 100% progress
}

enum LocationType {
  city
  country
  continent
}

// ============ LOCATION HIERARCHY ============

model Continent {
  id             String    @id @default(uuid())
  name           String    @unique
  code           String    @unique // e.g., "EU", "NA", "AS"
  imageUrl       String?
  color          String?   // Hex color for map display
  latitude       Float?    // Center latitude
  longitude      Float?    // Center longitude
  latitudeDelta  Float?    // Map zoom level
  longitudeDelta Float?    // Map zoom level

  countries   Country[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Country {
  id             String    @id @default(uuid())
  name           String
  code           String    @unique // ISO 3166-1 alpha-2, e.g., "US", "FR"
  imageUrl       String?
  flagUrl        String?
  latitude       Float?    // Center latitude
  longitude      Float?    // Center longitude
  latitudeDelta  Float?    // Map zoom level
  longitudeDelta Float?    // Map zoom level

  continentId String
  continent   Continent @relation(fields: [continentId], references: [id], onDelete: Cascade)

  cities      City[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([continentId, name])
  @@index([continentId])
}

model City {
  id          String       @id @default(uuid())
  name        String
  imageUrl    String?
  latitude    Float?
  longitude   Float?

  countryId   String
  country     Country      @relation(fields: [countryId], references: [id], onDelete: Cascade)

  attractions Attraction[]

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([countryId, name])
  @@index([countryId])
}

// ============ USERS ============

model User {
  id            String       @id @default(uuid())
  email         String       @unique
  passwordHash  String?
  name          String
  avatarUrl     String?
  authProvider  AuthProvider @default(email)
  emailVerified Boolean      @default(false)
  appleUserId   String?      @unique
  role          UserRole     @default(user)

  // Subscription
  subscriptionTier      SubscriptionTier   @default(free)
  subscriptionStatus    SubscriptionStatus @default(active)
  subscriptionStartDate DateTime?
  subscriptionEndDate   DateTime?
  stripeCustomerId      String?            @unique
  stripeSubscriptionId  String?            @unique
  appleOriginalTransactionId String?       @unique

  refreshTokens RefreshToken[]
  reviews       Review[]
  favorites     Favorite[]
  helpfulVotes  HelpfulVote[]
  visits        Visit[]
  dailyScans    DailyScan[]
  badges        UserBadge[]
  pushTokens    PushToken[]

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([email])
  @@index([subscriptionTier])
  @@index([role])
  @@index([subscriptionEndDate])        // Subscription expiry checks
  @@index([createdAt])                  // Analytics & pagination
  @@index([authProvider, createdAt])    // Provider analytics
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

model Attraction {
  id               String             @id @default(uuid())
  name             String
  description      String
  shortDescription String
  category         AttractionCategory

  // Location (new hierarchy)
  cityId           String
  city             City               @relation(fields: [cityId], references: [id], onDelete: Cascade)

  // Detailed location
  latitude         Float
  longitude        Float
  address          String
  postalCode       String?

  // Media
  images           String[]
  thumbnailUrl     String

  // Contact
  contactPhone     String?
  contactEmail     String?
  website          String?

  // Pricing
  currency         String?
  adultPrice       Float?
  childPrice       Float?
  seniorPrice      Float?
  isFree           Boolean            @default(false)

  // Rich content
  highlights       String[]           // Key things to see/do
  tips             String[]           // Visitor tips
  bestTimeToVisit  String?            // e.g., "Early morning", "Spring", "Sunset"
  averageDuration  Int?               // Average visit duration in minutes
  historicalInfo   String?            // Historical background
  famousFor        String?            // What it's famous for

  // Visitor info
  accessibility    String?            // Wheelchair access info
  audioGuide       Boolean            @default(false)
  guidedTours      Boolean            @default(false)
  photography      Boolean            @default(true)
  petFriendly      Boolean            @default(false)
  familyFriendly   Boolean            @default(true)

  // Stats (denormalized for performance)
  averageRating    Float              @default(0)
  totalReviews     Int                @default(0)

  openingHours     OpeningHours[]
  reviews          Review[]
  favorites        Favorite[]
  visits           Visit[]

  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt

  @@index([category])
  @@index([cityId])
  @@index([averageRating])
  @@index([latitude, longitude])
  @@index([cityId, category])           // Filtered city queries
  @@index([name])                       // Search functionality
}

model OpeningHours {
  id           String     @id @default(uuid())
  attractionId String
  attraction   Attraction @relation(fields: [attractionId], references: [id], onDelete: Cascade)
  dayOfWeek    Int        // 0 = Sunday, 6 = Saturday
  openTime     String     // HH:mm format
  closeTime    String     // HH:mm format
  isClosed     Boolean    @default(false)

  @@unique([attractionId, dayOfWeek])
  @@index([attractionId])
}

model Review {
  id           String       @id @default(uuid())
  attractionId String
  attraction   Attraction   @relation(fields: [attractionId], references: [id], onDelete: Cascade)
  userId       String
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  rating       Int          // 1-5
  title        String
  content      String
  images       String[]
  visitDate    DateTime?

  // Stats (denormalized for performance)
  helpfulCount Int          @default(0)

  helpfulVotes HelpfulVote[]

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@unique([attractionId, userId]) // One review per user per attraction
  @@index([attractionId])
  @@index([userId])
  @@index([rating])
  @@index([attractionId, rating])       // Rating distribution queries
  @@index([createdAt])                  // Recent reviews
}

model HelpfulVote {
  id        String   @id @default(uuid())
  reviewId  String
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([reviewId, userId])
  @@index([reviewId])
  @@index([userId])
}

model Favorite {
  id           String     @id @default(uuid())
  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  attractionId String
  attraction   Attraction @relation(fields: [attractionId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@unique([userId, attractionId])
  @@index([userId])
  @@index([attractionId])
}

model Visit {
  id           String     @id @default(uuid())
  userId       String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  attractionId String
  attraction   Attraction @relation(fields: [attractionId], references: [id], onDelete: Cascade)
  visitDate    DateTime   @default(now())
  photoUrl     String?
  notes        String?
  isVerified   Boolean    @default(false) // true = camera scan verified, counts for leaderboard
  createdAt    DateTime   @default(now())

  @@unique([userId, attractionId])
  @@index([userId])
  @@index([attractionId])
  @@index([isVerified])
  @@index([userId, isVerified])         // Leaderboard queries (verified visits per user)
  @@index([visitDate])                  // Time-based analytics
  @@index([userId, visitDate])          // User activity history
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

model DailyScan {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scanDate  DateTime @default(now())
  photoUrl  String?
  result    String?  // JSON string with scan result

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, scanDate])
  @@index([scanDate])                   // Daily cleanup/analytics
}

// ============ BADGES ============

model Badge {
  id           String       @id @default(uuid())
  locationId   String       // References City.id, Country.id, or Continent.id
  locationType LocationType
  locationName String       // Denormalized for display (e.g., "Paris", "France", "Europe")
  tier         BadgeTier
  iconUrl      String?      // Optional custom badge icon

  userBadges   UserBadge[]

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@unique([locationId, tier])
  @@index([locationType])
  @@index([locationName])
}

model UserBadge {
  id                 String   @id @default(uuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badgeId            String
  badge              Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  earnedAt           DateTime @default(now())

  // Snapshot of progress when badge was earned
  attractionsVisited Int
  totalAttractions   Int
  progressPercent    Int

  createdAt          DateTime @default(now())

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
  @@index([earnedAt])
}

// ============ PUSH NOTIFICATIONS ============

model PushToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform  String   // "ios" | "android"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([token])
  @@index([isActive])
}
